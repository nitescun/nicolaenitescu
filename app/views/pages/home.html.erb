<div id="index-banner" class="parallax-container">
  <div class="section no-pad-bot">
    <div class="container black-bg col s12 m8 offset-m2 l4 offset-l4">
      <div class="row center">

        <h1 class="center grey-text text-lighten-2 kelsonic">Nicolae Nitescu</h1>

        <%= image_tag("profile_compressed.jpg", alt: "Kelsonic.io", class: "img-container responsive-img") %>

        <h5 class="header white-text">Full-Stack Web Developer</h5>

      </div>
      <div class="row center">
        <%= link_to "Portfolio", projects_path, id: "download-button", class: "btn-large waves-effect waves-light orange lighten-1" %>
      </div>
    </div>
  </div>
  <div class="parallax"><%= image_tag("home.jpg", alt: "Placeholder image", class: "responsive-img") %></div>
</div>

<div class="divider light-blue"></div>

<div class="row center">
  <div class="col s12">
    <h3 class="light-blue-text text-darken-4">Top Competencies</h3>
  </div>
</div>

<!--Skills Card-->
<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card orange">
      <div class="card-content white-text">
        <table class="highlight centered">
          <thead>
            <tr>
              <th>Skill</th>
              <th>rating</th>
            </tr>
          </thead>

          <tbody>
            <% @top_skills.each do |skill| %>
              <tr>
                <td><%= skill.skill %></td>
                <td><%= gen_stars(skill.rating) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row center">
  <div class="col s12">
    <h3 class="blue-text text-darken-4">Want to see all of my competencies?</h3>
    <br/>
    <%= link_to "Yes, take me there", about_path, class: "btn btn-large light-blue waves-effect waves-orange" %>
  </div>
</div>
